<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="https://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://www.woltlab.com https://www.woltlab.com/XSD/maelstrom/option.xsd">
	<import>
		<categories>
			<category name="clan">
				<parent />
			</category>

			<category name="clan.general">
				<parent>clan</parent>
			</category>

			<category name="clan.general.teamspeak">
				<parent>clan.general</parent>
			</category>

			<category name="clan.application">
				<parent>clan</parent>
			</category>
		</categories>

		<options>
			<!-- Are applications currently allowed? -->
			<option name="unkso_allow_applications">
				<categoryname>clan.application</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>

			<!-- Board ID for applications -->
			<option name="unkso_applications_board_id">
				<categoryname>clan.application</categoryname>
				<optiontype>WBBBoardSelect</optiontype>
			</option>

			<!-- List of Game Servers -->
			<option name="unkso_game_servers">
				<categoryname>clan.general</categoryname>
				<optiontype>textarea</optiontype>
			</option>

			<!-- Teamspeak Server Host -->
			<option name="unkso_teamspeak_server_host">
				<categoryname>clan.general.teamspeak</categoryname>
				<optiontype>text</optiontype>
			</option>

			<!-- Teamspeak Server Port -->
			<option name="unkso_teamspeak_server_port">
				<categoryname>clan.general.teamspeak</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>9987</defaultvalue>
			</option>

			<!-- Teamspeak Server Password -->
			<option name="unkso_teamspeak_server_password">
				<categoryname>clan.general.teamspeak</categoryname>
				<optiontype>text</optiontype>
			</option>
		</options>
	</import>
</data>
